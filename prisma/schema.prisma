generator client {
  provider = "prisma-client-js"
  output   = "../src/lib/prisma/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Run {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  prompt      String
  branch      String
  repoUrl     String
  output      String?
  containerId String?
  error       String?
  image       String   @default("ghcr.io/antho1404/claude-runner:latest")
  region      String   @default("sin")
}
